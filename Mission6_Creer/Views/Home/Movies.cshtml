@model Movie

<h2>Add a Movie</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" type="number" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control" required>
            <option value="">Select Rating</option> <!-- Ensures a valid selection -->
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
    </div>
    
    <br/>
    
    <div class="form-group">
        <label asp-for="Edited"></label>
        <input type="checkbox" asp-for="Edited" />
    </div>
    
    <br/>

    <div class="form-group">
        <label asp-for="LentTo"></label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>

    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>